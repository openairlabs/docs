        {
          "anchor": "Get Early Access",
          "href": "https://waitlist.flyweel.co",
          "icon": "sparkles"
        },
        {
          "anchor": "Go to Site",
          "href": "https://flyweel.co",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/flyweel-light-theme.webp",
    "dark": "/logo/flyweel-dark-theme.webp",
    "href": "https://flyweel.co"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:team@flyweel.co"
      },
      {
        "label": "RSS",
        "href": "https://flyweel.co/changelog/rss.xml"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Early Access",
      "href": "https://waitlist.flyweel.co"
    }
  },
  "styling": {

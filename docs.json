{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Welcome to Flyweel",
  "tagline": "Complete guide to advertising spend optimization and campaign management",
  "colors": {
    "primary": "#90DAB8",
    "light": "#A4FED3",
    "dark": "#7BC49A"
  },
  "favicon": "/logo/logo.webp",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book-open",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started/quickstart-guide",
              "getting-started/ad-platform-connections"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/adgrid-campaign-manager",
              "features/ai-agent-chat",
              "features/reports-analytics"
            ]
          },
          {
            "group": "Account & Settings",
            "pages": [
              "settings/account-management",
              "settings/billing-subscription"
            ]
          }
        ]
      },
      {
        "dropdown": "Changelog",
        "icon": "megaphone",
        "pages": ["changelog"]
      },
      {
        "dropdown": "Go To Blog",
        "icon": "newspaper",
        "href": "https://flyweel.co/resources"
      }
